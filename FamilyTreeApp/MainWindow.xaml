<Window x:Class="FamilyTreeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FamilyTreeApp"
        xmlns:controls="clr-namespace:FamilyTreeApp.UI.Controls"
        xmlns:converters="clr-namespace:FamilyTreeApp.UI.Converters"
        mc:Ignorable="d"
        Title="Family Tree Builder" 
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_PreviewKeyDown">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{DynamicResource SecondaryBackgroundBrush}">
            <MenuItem Header="_File">
                <MenuItem Header="_New" InputGestureText="Ctrl+N" Click="NewTree_Click"/>
                <MenuItem Header="_Open..." InputGestureText="Ctrl+O" Click="OpenTree_Click"/>
                <Separator/>
                <MenuItem Header="_Save" InputGestureText="Ctrl+S" Click="SaveTree_Click"/>
                <MenuItem Header="Save _As..." Click="SaveTreeAs_Click"/>
                <Separator/>
                <MenuItem Header="Export _Preview..." Click="ExportPreview_Click"/>
                <MenuItem Header="Export as _PNG..." Click="ExportPng_Click"/>
                <MenuItem Header="Export as _SVG..." Click="ExportSvg_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGestureText="Ctrl+Z" Click="Undo_Click"/>
                <MenuItem Header="_Redo" InputGestureText="Ctrl+Y" Click="Redo_Click"/>
                <Separator/>
                <MenuItem Header="_Delete Selected" InputGestureText="Del" Click="DeleteSelected_Click"/>
            </MenuItem>
            <MenuItem Header="_Insert">
                <MenuItem Header="Add _Text Box" Click="AddTextBox_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Click="ZoomIn_Click"/>
                <MenuItem Header="Zoom _Out" Click="ZoomOut_Click"/>
                <MenuItem Header="_Reset View" InputGestureText="Ctrl+R" Click="ResetView_Click"/>
                <Separator/>
                <MenuItem Header="_Panels">
                    <MenuItem x:Name="ShowToolsPanelMenuItem" Header="_Tools Panel" IsCheckable="True" IsChecked="True" Click="ShowToolsPanel_Click"/>
                </MenuItem>
                <MenuItem x:Name="ShowGridMenuItem" Header="Show _Grid" InputGestureText="Ctrl+G" IsCheckable="True" Click="ShowGrid_Click"/>
                <Separator/>
                <MenuItem Header="_Line Style">
                    <MenuItem x:Name="CurvesStyleMenuItem" Header="_Curves" IsCheckable="True" IsChecked="True" Click="LineStyleCurves_Click"/>
                    <MenuItem x:Name="SquareStyleMenuItem" Header="_Square" IsCheckable="True" Click="LineStyleSquare_Click"/>
                </MenuItem>
                <MenuItem Header="Layout _Mode">
                    <MenuItem x:Name="FixedLayoutMenuItem" Header="_Fixed (Auto)" InputGestureText="Ctrl+F" IsCheckable="True" IsChecked="True" Click="LayoutModeFixed_Click" ToolTip="Nodes are automatically positioned"/>
                    <MenuItem x:Name="FreeLayoutMenuItem" Header="F_ree (Manual)" InputGestureText="Ctrl+F" IsCheckable="True" Click="LayoutModeFree_Click" ToolTip="Nodes can be freely positioned"/>
                </MenuItem>
                <MenuItem Header="_Snapping">
                    <MenuItem x:Name="SnapToGridMenuItem" Header="Snap to _Grid" IsCheckable="True" Click="SnapToGrid_Click" ToolTip="Snap nodes to grid"/>
                    <MenuItem x:Name="SnapToAngleMenuItem" Header="Snap to _Angle" IsCheckable="True" Click="SnapToAngle_Click" ToolTip="Snap connections to 45° angles"/>
                    <MenuItem x:Name="SnapToGeometryMenuItem" Header="Snap to _Geometry" IsCheckable="True" Click="SnapToGeometry_Click" ToolTip="Snap to other nodes and guides"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Tree">
                <MenuItem Header="Add _Node" Click="AddNode_Click"/>
                <MenuItem Header="Add _Connection..." IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="_Auto Layout" Click="AutoLayout_Click" ToolTip="Automatically arrange nodes"/>
                <Separator/>
                <MenuItem Header="_Alignment">
                    <MenuItem x:Name="TopDownMenuItem" Header="_Top-Down" IsCheckable="True" IsChecked="True" Click="AlignmentTopDown_Click"/>
                    <MenuItem x:Name="LeftRightMenuItem" Header="_Left-Right" IsCheckable="True" Click="AlignmentLeftRight_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Font Settings..." Click="TreeFontSettings_Click"/>
            </MenuItem>
            <MenuItem Header="_Groups">
                <MenuItem Header="_Manage Groups..." Click="ManageGroups_Click"/>
            </MenuItem>
            <MenuItem Header="_Appearance">
                <MenuItem Header="_Colors..." Click="Colors_Click"/>
                <MenuItem Header="_Connection Styles..." Click="ConnectionStyles_Click"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="_Preferences..." Click="Settings_Click"/>
                <MenuItem Header="_Keybinds..." Click="Keybinds_Click"/>
                <MenuItem Header="Customize _Toolbar..." Click="CustomizeToolbar_Click"/>
                <Separator/>
                <MenuItem Header="Relationship Rules">
                    <MenuItem x:Name="AllowIncestMenuItem" Header="Allow _Incest" IsCheckable="True" Click="AllowIncest_Click"/>
                    <MenuItem x:Name="AllowThreesomeMenuItem" Header="Allow _Threesome+" IsCheckable="True" Click="AllowThreesome_Click"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About..." Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" x:Name="MainContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" x:Name="TopDockRow"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto" x:Name="BottomDockRow"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" x:Name="LeftDockColumn"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto" x:Name="RightDockColumn"/>
            </Grid.ColumnDefinitions>
            
            <!-- Tool Panel (Dockable) - Left -->
            <controls:DockablePanel x:Name="ToolsPanel" 
                                     Grid.Row="1"
                                     Grid.Column="0" 
                                     Title="Tools"
                                     DockPosition="Left"
                                     CanClose="False"
                                     Width="170"
                                     MinWidth="120">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="4">
                        <TextBlock Text="TOOLS" 
                                   FontWeight="Bold" 
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <!-- Dynamic Tool Buttons with Drag-Drop -->
                        <ListBox x:Name="ToolsListBox"
                                 ItemsSource="{Binding}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 AllowDrop="True"
                                 PreviewMouseLeftButtonDown="ToolsListBox_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="ToolsListBox_PreviewMouseMove"
                                 Drop="ToolsListBox_Drop"
                                 DragOver="ToolsListBox_DragOver">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayText}" 
                                            Style="{DynamicResource ToolButtonStyle}"
                                            Click="DynamicTool_Click"
                                            Tag="{Binding Id}"
                                            ToolTip="{Binding Tooltip}"
                                            Margin="0,1"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <Separator Margin="0,10"/>
                        
                        <TextBlock Text="VIEW" 
                                   FontWeight="Bold" 
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <Button Content="🔍+ Zoom In" 
                                Style="{DynamicResource ToolButtonStyle}"
                                Click="ZoomIn_Click"/>
                        
                        <Button Content="🔍− Zoom Out" 
                                Style="{DynamicResource ToolButtonStyle}"
                                Click="ZoomOut_Click"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <CheckBox x:Name="GridCheckBox" 
                                      Content="Grid" 
                                      VerticalAlignment="Center"
                                      Click="ShowGrid_Click"/>
                        </StackPanel>
                        
                        <Separator Margin="0,10"/>
                        
                        <Button Content="⚙ Customize..." 
                                Style="{DynamicResource ToolButtonStyle}"
                                Click="CustomizeTools_Click"
                                ToolTip="Customize toolbar"/>
                    </StackPanel>
                </ScrollViewer>
            </controls:DockablePanel>
            
            <!-- Splitter -->
            <GridSplitter Grid.Row="1" Grid.Column="1" 
                          Width="3" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{DynamicResource BorderBrush}"/>
            
            <!-- Tree Canvas -->
            <controls:TreeCanvas x:Name="MainCanvas" Grid.Row="1" Grid.Column="2"/>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="{DynamicResource SecondaryBackgroundBrush}">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Nodes: "/>
                    <TextBlock x:Name="NodeCountText" Text="0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Connections: "/>
                    <TextBlock x:Name="ConnectionCountText" Text="0"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Alignment: "/>
                    <TextBlock x:Name="AlignmentText" Text="Top-Down"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="ZoomText" Text="100%"/>
                    <TextBlock Text=" zoom"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
