<UserControl x:Class="FamilyTreeApp.UI.Controls.TreeCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FamilyTreeApp.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             ClipToBounds="True"
             Background="{DynamicResource CanvasBackgroundBrush}"
             MouseWheel="Canvas_MouseWheel"
             MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
             MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
             MouseMove="Canvas_MouseMove"
             MouseRightButtonDown="Canvas_MouseRightButtonDown">
    
    <UserControl.Resources>
        <!-- Grid pattern for optional grid display -->
        <DrawingBrush x:Key="GridBrush" TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <LineGeometry StartPoint="0,0" EndPoint="50,0"/>
                            <LineGeometry StartPoint="0,0" EndPoint="0,50"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Pen>
                        <Pen Brush="#2A2A2A" Thickness="1"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>
    
    <!-- Main container with transform -->
    <Grid x:Name="MainGrid">
        <!-- Optional Grid Background -->
        <Rectangle x:Name="GridBackground" 
                   Fill="{StaticResource GridBrush}"
                   Visibility="Collapsed"/>
        
        <!-- Canvas for nodes and connections -->
        <Canvas x:Name="TreeCanvasElement" Background="Transparent">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                    <TranslateTransform x:Name="TranslateTransform" X="0" Y="0"/>
                </TransformGroup>
            </Canvas.RenderTransform>
            
            <!-- Connections will be drawn here first (below nodes) -->
            <Canvas x:Name="ConnectionsCanvas"/>
            
            <!-- Nodes will be added here -->
            <Canvas x:Name="NodesCanvas"/>
        </Canvas>
    </Grid>
</UserControl>
