<Window x:Class="FamilyTreeApp.UI.Windows.FirstRunWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Family Tree Builder" 
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="24,24,24,16">
            <TextBlock Text="Welcome to Family Tree Builder" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryTextBrush}"/>
            <TextBlock Text="Let's configure your preferences before getting started." 
                       FontSize="14" 
                       Foreground="{DynamicResource SecondaryTextBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,0">
            <StackPanel>
                
                <!-- Appearance Section -->
                <TextBlock Text="APPEARANCE" FontWeight="Bold" FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>
                
                <CheckBox x:Name="DarkModeCheckBox" Content="Dark Mode (Recommended)" IsChecked="True" Margin="0,0,0,8"/>
                <CheckBox x:Name="ShowGenderCheckBox" Content="Show Gender Icons" IsChecked="True" Margin="0,0,0,8"/>
                <CheckBox x:Name="ShowGridCheckBox" Content="Show Grid on Canvas" IsChecked="False" Margin="0,0,0,16"/>
                
                <!-- Layout Section -->
                <TextBlock Text="DEFAULT LAYOUT" FontWeight="Bold" FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,8,0,8"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Alignment:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="AlignmentComboBox" Grid.Column="1">
                        <ComboBoxItem Content="Top-Down (Default)" Tag="TopDown" IsSelected="True"/>
                        <ComboBoxItem Content="Left-Right" Tag="LeftRight"/>
                    </ComboBox>
                </Grid>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Line Style:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="LineStyleComboBox" Grid.Column="1">
                        <ComboBoxItem Content="Curved (Bezier)" Tag="Curves" IsSelected="True"/>
                        <ComboBoxItem Content="Square (Orthogonal)" Tag="Square"/>
                    </ComboBox>
                </Grid>
                
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Layout Mode:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="LayoutModeComboBox" Grid.Column="1">
                        <ComboBoxItem Content="Fixed (Auto-arrange)" Tag="Fixed" IsSelected="True"/>
                        <ComboBoxItem Content="Free (Manual placement)" Tag="Free"/>
                    </ComboBox>
                </Grid>
                
                <!-- Rules Section -->
                <TextBlock Text="RELATIONSHIP RULES" FontWeight="Bold" FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,8,0,8"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>
                
                <CheckBox x:Name="AllowIncestCheckBox" Content="Allow Incest Relationships" IsChecked="False" Margin="0,0,0,8"/>
                <CheckBox x:Name="AllowThreesomeCheckBox" Content="Allow Multiple Parents (Threesome+)" IsChecked="False" Margin="0,0,0,16"/>
                
                <!-- Royalty Section -->
                <TextBlock Text="ROYALTY DISPLAY" FontWeight="Bold" FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,8,0,8"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>
                
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Crown Display:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CrownDisplayComboBox" Grid.Column="1">
                        <ComboBoxItem Content="Queen Only (Default)" Tag="QueenOnly" IsSelected="True"/>
                        <ComboBoxItem Content="King Only" Tag="KingOnly"/>
                        <ComboBoxItem Content="Both" Tag="Both"/>
                        <ComboBoxItem Content="None" Tag="None"/>
                    </ComboBox>
                </Grid>
                
                <!-- Keybinds Section -->
                <TextBlock Text="KEYBIND PRESET" FontWeight="Bold" FontSize="12" 
                           Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,8,0,8"/>
                <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,12"/>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Preset:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="KeybindPresetComboBox" Grid.Column="1">
                        <ComboBoxItem Content="Default" Tag="Default" IsSelected="True"/>
                    </ComboBox>
                </Grid>
                
                <TextBlock Text="You can customize keybinds later in Settings â†’ Keybinds" 
                           FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}" 
                           FontStyle="Italic" Margin="0,4,0,16"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="24,16,24,24">
            <Button x:Name="UseDefaultsButton" Content="Use Defaults" Click="UseDefaults_Click" Width="100" Margin="0,0,8,0"/>
            <Button x:Name="StartButton" Content="Get Started" Click="Start_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
