<Window x:Class="FamilyTreeApp.UI.Windows.KeybindsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keybinds" 
        Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="16">
            <TextBlock Text="Keyboard Shortcuts" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Click on a keybind field and press a key to change it" 
                       Foreground="#888" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Keybinds List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Add Node"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="AddNodeKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Remove Connection"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="RemoveConnectionKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Delete Node"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="DeleteNodeKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Undo"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="UndoKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Redo"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="RedoKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Save"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="SaveKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Open"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="OpenKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="7" Grid.Column="0" Text="New File"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="NewFileKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="8" Grid.Column="0" Text="Zoom In"/>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="ZoomInKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="9" Grid.Column="0" Text="Zoom Out"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="ZoomOutKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="10" Grid.Column="0" Text="Reset View"/>
                <TextBox Grid.Row="10" Grid.Column="1" x:Name="ResetViewKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="11" Grid.Column="0" Text="Toggle Grid"/>
                <TextBox Grid.Row="11" Grid.Column="1" x:Name="ToggleGridKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="12" Grid.Column="0" Text="Select All"/>
                <TextBox Grid.Row="12" Grid.Column="1" x:Name="SelectAllKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
                
                <TextBlock Grid.Row="13" Grid.Column="0" Text="Duplicate"/>
                <TextBox Grid.Row="13" Grid.Column="1" x:Name="DuplicateKeybind" 
                         PreviewKeyDown="Keybind_PreviewKeyDown" IsReadOnly="True"/>
            </Grid>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button x:Name="RestoreDefaultsButton" Content="Restore Defaults" Click="RestoreDefaults_Click"/>
            <Button x:Name="SaveButton" Content="Save" Click="Save_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
