<Window x:Class="FamilyTreeApp.UI.Windows.TreeFontWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d" 
        Title="Tree Font Settings" Height="320" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Font Settings for This Tree" 
                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
        
        <!-- Font Settings -->
        <GroupBox Grid.Row="1" Header="Font Options" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Use Default Checkbox -->
                <CheckBox x:Name="UseDefaultCheckBox" 
                          Grid.Row="0" Grid.ColumnSpan="2"
                          Content="Use Default Font (from App Settings)"
                          Margin="0,0,0,10"
                          Checked="UseDefaultCheckBox_Changed"
                          Unchecked="UseDefaultCheckBox_Changed"/>
                
                <!-- Font Family -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Font Family:" VerticalAlignment="Center"/>
                <ComboBox x:Name="FontFamilyComboBox" Grid.Row="1" Grid.Column="1" 
                          Margin="0,0,0,8" Height="28"
                          SelectionChanged="FontOption_Changed"/>
                
                <!-- Font Size -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Font Size:" VerticalAlignment="Center"/>
                <ComboBox x:Name="FontSizeComboBox" Grid.Row="2" Grid.Column="1" 
                          Margin="0,0,0,8" Height="28"
                          SelectionChanged="FontOption_Changed">
                    <ComboBoxItem Content="8 pt" Tag="8"/>
                    <ComboBoxItem Content="9 pt" Tag="9"/>
                    <ComboBoxItem Content="10 pt" Tag="10"/>
                    <ComboBoxItem Content="11 pt" Tag="11"/>
                    <ComboBoxItem Content="12 pt" Tag="12"/>
                    <ComboBoxItem Content="13 pt" Tag="13"/>
                    <ComboBoxItem Content="14 pt" Tag="14" IsSelected="True"/>
                    <ComboBoxItem Content="16 pt" Tag="16"/>
                    <ComboBoxItem Content="18 pt" Tag="18"/>
                    <ComboBoxItem Content="20 pt" Tag="20"/>
                    <ComboBoxItem Content="24 pt" Tag="24"/>
                </ComboBox>
                
                <!-- Style Options -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Style:" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                    <CheckBox x:Name="FontBoldCheckBox" Content="Bold" Margin="0,0,15,0"
                              Click="FontOption_Changed"/>
                    <CheckBox x:Name="FontItalicCheckBox" Content="Italic"
                              Click="FontOption_Changed"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Preview -->
        <GroupBox Grid.Row="2" Header="Preview" Padding="10" Margin="0,0,0,15">
            <Border Background="{DynamicResource TertiaryBackgroundBrush}" CornerRadius="4" Padding="15">
                <TextBlock x:Name="FontPreviewText" 
                           Text="John Smith"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Height="28" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="80" Height="28" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>