<Window x:Class="FamilyTreeApp.UI.Windows.CustomToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Custom Tool" 
        Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create Custom Tool" 
                   FontSize="18" FontWeight="Bold" 
                   Foreground="{DynamicResource PrimaryTextBrush}" 
                   Margin="0,0,0,16"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Tool Name:" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,4"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,12"/>
            
            <TextBlock Text="Icon (emoji or text):" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,4"/>
            <TextBox x:Name="IconTextBox" MaxLength="4" Margin="0,0,0,12"/>
            
            <TextBlock Text="Action:" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,4"/>
            <ComboBox x:Name="CommandComboBox" Margin="0,0,0,12"/>
            
            <TextBlock Text="Tooltip:" Foreground="{DynamicResource PrimaryTextBrush}" Margin="0,0,0,4"/>
            <TextBox x:Name="TooltipTextBox" Margin="0,0,0,12"/>
            
            <!-- Preview -->
            <TextBlock Text="Preview:" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,8,0,4"/>
            <Border Background="{DynamicResource TertiaryBackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="8">
                <Button x:Name="PreviewButton" 
                        Content="âž• New Tool" 
                        HorizontalAlignment="Left"
                        IsEnabled="False"/>
            </Border>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Width="80" Margin="0,0,8,0"/>
            <Button x:Name="CreateButton" Content="Create" Click="Create_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
